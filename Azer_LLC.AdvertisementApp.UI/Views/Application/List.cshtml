@model List<AdvertisementListDto>
@{
    Layout = "_Layout";
}


<div class="container-fluid">

    @{
        if (Model?.Count > 0)
        {
            <div class="text-end my-3 p-1">
                <a asp-action="Create" asp-controller="Application">Create a new advertisement</a>

            </div>

            <table class="mt-3 table table-sm table-hover table-striped">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Created date</th>
                        <th>Status</th>
                        <th>Operation</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var advertisement in Model)
                    {
                        <tr>
                            <td>@advertisement.Title</td>
                            <td>@advertisement.CreatedDate.ToString("dddd, dd MMMM yyyy")</td>
                            <td>@(advertisement.Status?"Active":"Negative")</td>

                            <td>
                                <a asp-action="Update" asp-controller="Application" asp-route-id="@advertisement.Id">Update</a> |
                                <a asp-action="Remove" asp-controller="Application" asp-route-id="@advertisement.Id">Remove</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="text-end my-3 p-1">
                <a asp-action="Create" asp-controller="Application">Create new advertisement</a>

            </div>
            <div class="mt-3 text-center lead">
                There is no advertisement.
            </div>
        }
    }


</div>
